<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/item_stations"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:background="@drawable/linearlayout_shape">

    <ImageView
        android:id="@+id/stations_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/little_margin"
        android:src="@drawable/fj2"/>

    <TextView
        android:id="@+id/station_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="@string/test"
        android:paddingLeft="@dimen/gridview_margin"
        android:gravity="center_vertical"
        android:textSize="@dimen/content_text_size"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/station_elec"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:text="@string/test"
        android:paddingLeft="@dimen/gridview_margin"
        android:gravity="center_vertical|right"
        android:textSize="@dimen/content_text_size"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="@string/electricity_unit3"
        android:paddingLeft="@dimen/gridview_margin"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="@dimen/content_text_size"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/right2"
        android:paddingRight="@dimen/gridview_margin"
        android:paddingLeft="@dimen/gridview_margin"
        android:layout_marginRight="@dimen/activity_vertical_little_margin"
        android:gravity="center_vertical"/>

</LinearLayout>
